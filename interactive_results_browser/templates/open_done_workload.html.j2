{% extends "base.html.j2" %}
{% block title %}{{ experiment_name }}{% endblock %}
{% block body %}
    <h1>{{ experiment_name }}</h1>
    <table>
        <tr>
            {% for col in column_names %}
                {% if col == link_column %}
                    <th>{{col}}</th>
                {% else %}
                    <th>
                        {{col[0].name}}
                        {% for k,v in col[1].items() %}
                            ({{ k}}: {{ v }})
                        {% endfor %}
                    </th>
                {% endif %}
            {% endfor %}
        </tr>
        {% for row in row_data %}
            <tr>
                {% for col, row_ in zip(column_names, row) %}
                    {% if col == link_column %}
                        <td>
                            <a type="submit" href={{ url_for("show_dataset_overview", dataset_id=row_.value) }}>
                                {{ row_.name }}
                            </a>
                        </td>
                    {% else %}
                        <td>({{row_[0]}}, {{row_[1]}})</td>
                    {% endif %}
                {% endfor %}
            </tr>
        {% endfor %}

    </table>

{% endblock %}